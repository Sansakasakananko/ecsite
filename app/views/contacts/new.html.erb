<header>
    <%= render 'shared/user_signed_in' %>
    <div style="text-align: right;">
    <%= link_to "商品一覧へ", products_path %>&nbsp;&nbsp;&nbsp;&nbsp;
    </div>
  </header>
<br>
<br>

<div class="contact-form">
<div class="container-fluid light-blue-container p-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
    
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

      <%= form_with model: @contact, url: confirm_contacts_path,  data:{ turbo: false} do |f| %>
        <div class="form-group">
          <%= f.label :name, 'お名前' %><span class="text-danger">*</span>
          <%= f.text_field :name, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, '電話番号' %><span class="text-danger">*</span>
          <%= f.text_field :phone_number, class: 'form-control', required: true %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>*
          <%= f.email_field :email, value: current_user.email, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :subject, '件名' %><span class="text-danger"></span>
          <%= f.text_area :subject, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :message, 'メッセージ' %><span class="text-danger">*</span>
          <%= f.text_area :message, size: '10x10', class: 'form-control', required: true %>
        </div>

        <div class="actions">
          <%= f.submit '入力内容確認', class: "btn btn-outline-info bg-white" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
</div>
