<div id="<%= dom_id book %>">
  <p>
    <strong>Tags:</strong>
    <%= book.tags.map(&:name).join(", ") %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong>Published on:</strong>
    <%= book.published_on %>
  </p>

  <p>
    <strong>Showing:</strong>
    <%= book.showing %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= book.price %>
  </p>

  <p>
    <strong>Status:<strong>
      <%= book.status %>
  </p>



</div>
