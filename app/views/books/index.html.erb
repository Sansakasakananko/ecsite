<div class="admin-header">
  <h1>管理者画面</h1>
  <div style="text-align: right;">
    <%= link_to "New book", new_book_path %>&nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to 'ログアウト', destroy_admin_session_path, data: {turbo_method: :delete}%>&nbsp;&nbsp;
  </div>
</div>
<p style="color: green"><%= notice %></p>

<h2>書籍一覧</h2>

<div class="container">

<table class="styled-table">
  <thead>
    <tr>
      <th>Status</th>
      <th>Picture</th>
      <th>Title</th>
      <th>Author</th>
      <th>Published on</th>
      <th>Price</th>
      <th>Show</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.status %></td>
        <td>
          <% if book.photo.attached? %>
            <%= image_tag book.picture %>
          <% else %>
            <%= image_tag "no_image.png", size: "300x200" %>
          
          <% end %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_on %></td>
        <td><%= book.price %></td>
        <td><%= link_to "詳細", book %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

</div>

