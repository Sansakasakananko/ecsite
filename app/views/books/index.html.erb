<p style="color: green"><%= notice %></p>

<h1>管理者画面</h1>



<table border="1">
  <thead>
    <tr>
      <th>Status</th>
      <th>Picture</th>
      <th>Title</th>
      <th>Author</th>
      <th>Published on</th>
      <th>Price</th>
      <th>Show</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.status %></td>
        <td>
          <% if book.photo.attached? %>
            <%= image_tag book.picture %>
          <% else %>
            画像がありません
          <% end %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_on %></td>
        <td><%= book.price %></td>
        <td><%= link_to "詳細", book %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New book", new_book_path %>

