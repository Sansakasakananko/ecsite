<div class="admin-header">
  <h2>管理者画面</h2>
 <p style="text-align: right;"><%= link_to "New book", new_book_path %></p>
</div>
<p style="color: green"><%= notice %></p>

<h2>書籍一覧</h2>



<table border="1">
  <thead>
    <tr>
      <th>Status</th>
      <th>Picture</th>
      <th>Title</th>
      <th>Author</th>
      <th>Published on</th>
      <th>Price</th>
      <th>Show</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.status %></td>
        <td>
          <% if book.photo.attached? %>
            <%= image_tag book.picture %>
          <% else %>
            <%# <%= image_tag "no_image.png", size: "300x200" %> 
            画像がありません
          <% end %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_on %></td>
        <td><%= book.price %></td>
        <td><%= link_to "詳細", book %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>


