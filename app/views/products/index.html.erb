<p ide=notice><%= notice%></p>

<h1>商品一覧画面</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published on</th>
      <th>Showing</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @book.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_on %></td>
        <td><%= book.showing %><td>
        <td><%= book.price %><td>
        <td><%= link_to 'Show', product_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
