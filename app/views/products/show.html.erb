<header>
    <%= render 'shared/user_signed_in' %>

    <div style="text-align: right;">
    <% if session[:cart_id]%>
    <%= link_to 'カートを見る',cart_path(session[:cart_id]) %>
    <% end %>
  </div>

</header>
<%= yield %>



<h1>詳細画面</h1>
  <p><strong>Picture</strong></p> 
          <% if @book.photo.attached? %>
            <%= image_tag @book.picture %>
          <% else %>
            画像がありません
          <% end %>
        


  <p><strong>Tag</strong>:  <%= @book.tags.map(&:name).join(',') %></p>
  <p><strong>Title</strong>:  <%= @book.title %></p>
  <p><strong>Author</strong>: <%= @book.author %></p>
  <p><strong>Published on</strong>: <%= @book.published_on %></p>
  <p><strong>Price</strong>:  <%= @book.price %></p>
  <p><strong>Status</strong>: <%= @book.status %></p>

  <% if @book.sold_out? %>
    <p><strong>この商品は売切れです</strong></p>
  <% elsif @book.backordered? %>
    <p><strong>店頭にて予約受付中</strong></p>
  <% elsif @book.reserve? %>
    <p><strong>入荷待ちです</strong></p>
  <% else %>
    <%= link_to "購入", new_order_path(book_id: @book.id)%>
  <% end %>

 <%= link_to "戻る", products_path%>